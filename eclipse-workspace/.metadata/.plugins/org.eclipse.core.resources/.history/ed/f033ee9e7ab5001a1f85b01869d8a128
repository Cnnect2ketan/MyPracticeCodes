
public class StringRotation {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String firstString = "waterbottle";
		String secondString = "terbottlewa";
		boolean result = isSubstring(firstString, secondString);
		System.out.println(result);
	}

	private static boolean isSubstring(String firstString, String secondString) {
		if(firstString.length()!= secondString.length()) {
			return false;
		}
		char [] firstStringArray = firstString.toCharArray();
		char [] secondStringArray = secondString.toCharArray();
		int firstCharacterMatchIndex = findFirstCharacterMatchIndex(firstStringArray[0], secondStringArray);
		if(firstCharacterMatchIndex == -1) {
			return false;
		}
		for(int index = 0; index < secondStringArray.length; index ++) {
			
		}
		return false;
	}

	private static int findFirstCharacterMatchIndex(char c, char[] secondStringArray) {
		for (int index = 0; index < secondStringArray.length; index++) {
			if(c== secondStringArray[index]) {
				return index;
			}
		}
		return -1;
	}
	
}
